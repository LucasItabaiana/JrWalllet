import UIKit

class LoginViewController: UIViewController {
    @IBOutlet weak var usernameTextField: UITextField!
    @IBOutlet weak var passwordTextField: UITextField!
    @IBOutlet weak var statusLabel: UILabel!
    
    override func viewDidLoad() {
        super.viewDidLoad()
        // Configurações adicionais, se necessário
    }

    @IBAction func loginButtonTapped(_ sender: UIButton) {
        // Aqui você colocará a lógica para verificar o login
        let username = usernameTextField.text ?? ""
        let password = passwordTextField.text ?? ""
        
        if username.isEmpty || password.isEmpty {
            statusLabel.text = "Por favor, preencha todos os campos."
        } else {
            // Coloque aqui a lógica de autenticação, por exemplo:
            if username == "usuario" && password == "senha" {
                statusLabel.text = "Login bem-sucedido!"
                // Aqui você pode navegar para a próxima tela ou executar outras ações após o login
            } else {
                statusLabel.text = "Credenciais inválidas. Tente novamente."
            }
        }
    }
}
